<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jsj.mapper.PanicBuyingMapper">

    <resultMap id="myProduct" type="product">
        <!--
        column:表里面指定的列
        property：对应的javaBean属性
        如果不指定就自动封装，但仍然建议写上全部映射规则
        -->
        <id column="id" property="productId"/>
        <result column="stock" property="stock"/>
        <result column="price" property="price"/>
        <result column="productName" property="productName"/>
        <result column="createTime" property="createTime"/>
    </resultMap>

    <resultMap id="myUser" type="user">
        <id column="id" property="userId"/>
        <result column="username" property="userName"/>
        <result column="phone" property="phoneNumber"/>
        <result column="createTime" property="createTime"/>
    </resultMap>

    <resultMap id="myRecord" type="record">
        <id column="productId" property="productId"/>
        <result column="userId" property="userId"/>
    </resultMap>


    <select id="getUserById" resultMap="myUser">
        select * from tb_user WHERE id=#{userId}
    </select>

    <select id="getProductById" resultMap="myProduct">
        select * from tb_product WHERE id=#{productId}
    </select>

    <select id="getAllUsers" resultMap="myUser">
        select * from tb_user
    </select>

    <select id="getAllProducts" resultMap="myProduct">
        select * from tb_product
    </select>

    <select id="getAllRecords" resultMap="myRecord">
        select userId,productId from tb_record
    </select>

    <insert id="addRecord" useGeneratedKeys="true" keyProperty="id">
        insert into tb_record(userId, productId, state, stateInfo, createTime)
        values(#{userId}, #{productId}, #{state}, #{stateInfo}, #{createTime})
    </insert>

    <insert id="addUser" useGeneratedKeys="true" keyProperty="id">
        insert into tb_user(username, phone,createTime)
        values(#{userName}, #{phoneNumber}, #{createTime})
    </insert>

    <insert id="decreaseProductStock">
        UPDATE tb_product SET stock = stock-1
        WHERE id=#{productId} AND stock>0
    </insert>

</mapper>